<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.theFixApp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        android:screenOrientation="portrait" >
        <activity
            android:name="com.sourcey.theFixApp.MainActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="com.sourcey.theFixApp.authentication.LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sourcey.theFixApp.authentication.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name="com.sourcey.theFixApp.contact.ContActivity" />
        <activity android:name="com.sourcey.theFixApp.items.addItemActivity" />
        <activity android:name="com.sourcey.theFixApp.items.itemListActivity" />
        <activity android:name="com.sourcey.theFixApp.items.singleItemActivity" />
    </application>

</manifest>