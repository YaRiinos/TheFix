<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sourcey.theFixApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".contact.ContActivity" />
        <activity android:name=".managment.addItemActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".items.itemListActivity" />
        <activity android:name=".items.singleItemActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".managment.managmentActivity" />
        <activity android:name=".managment.addTechActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".account.profile.ProfileActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>